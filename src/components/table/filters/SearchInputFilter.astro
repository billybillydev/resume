---
import { twMerge } from "tailwind-merge";
import TextInput from "@components/input/TextInput.astro";
import type { TableSearchFilterProps } from "@components/table/props";

type Props = TableSearchFilterProps;
const {
  key,
  operator,
  placeholder = "Type here to filter table",
  id = "search-filter",
  name = "search-filter",
  class: className,
} = Astro.props;
---

<div class="w-full min-w-xs mx-auto">
  <TextInput
    @input={`filterByOperatorType("search", "${operator}", "${key}", $event.target.value)`}
    {placeholder}
    {id}
    {name}
    class={twMerge(
      "flex w-full h-10 px-3 py-2 text-sm bg-white border rounded-md border-neutral-300 ring-offset-background placeholder:text-neutral-500 focus:border-neutral-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-neutral-400 disabled:cursor-not-allowed disabled:opacity-50",
      className
    )}
  />
</div>
