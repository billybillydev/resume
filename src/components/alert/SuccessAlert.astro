---
import type { VariantColorType } from "@common/types";
import Alert from "./Alert.astro";
import type { AlertProps } from "./props";

type Props = AlertProps;
const { variant = "solid", title } = Astro.props;
const variantColorMap = new Map<VariantColorType, string>([
  ["solid", "border-transparent bg-success-600 text-white"],
  ["outlined", "border-transparent text-success-700 bg-success-200"],
  ["inversed", "border-success-600 text-success-600"],
]);
---

<Alert class={variantColorMap.get(variant)} {title}>
  <slot />
</Alert>
