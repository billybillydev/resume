---
import { tailwindThemeConfig } from "@config/design";
import SVG from "@components/svg/SVG.astro";
import type { IconProps } from "@components/icon/props";

type Props = IconProps;

const { size = 4, ...restProps } = Astro.props;
---

<SVG
  viewBox="0 0 24 24"
  style={`width: ${tailwindThemeConfig.width[size]}; height: ${tailwindThemeConfig.height[size]};`}
  {...restProps}
>
  <path
    stroke-linecap="round"
    stroke-linejoin="round"
    d="M19.5 13.5L12 21m0 0l-7.5-7.5M12 21V3"></path>
</SVG>
