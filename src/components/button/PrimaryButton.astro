---
import type { ButtonProps } from "./props";
import Button from "./Button.astro";
import { VariantColorType } from "@common/types";

type Props = ButtonProps;
const { class: className, variant = "solid", ...restProps } = Astro.props;
const variantClassMap = new Map<VariantColorType, string>([
  ['solid', 'btn-primary'],
  ['outlined', 'btn-primary-outlined'],
  ['inversed', 'btn-primary-inversed'],
])
---

<Button class={[variantClassMap.get(variant), className].join(" ")} {...restProps}>
  <slot />
</Button>

