---
import Badge from "@components/badge/Badge.astro";
---

<section
  x-data="{ interests: $store.resume.interests }"
  class="flex flex-col text-white p-2 gap-y-3"
>
  <h2 class="text-center underline underline-offset-2">Interests</h2>
  <ul class="flex flex-col gap-y-4">
    <template x-for="interest in interests">
      <li class="flex gap-x-2">
        <p x-text="interest.name" class="shrink-0"></p>
        <ul class="flex flex-wrap items-center gap-2">
          <template x-for="keyword in interest.keywords">
            <li>
              <Badge x-text="keyword" class="text-sm bg-sky-600" />
            </li>
          </template>
        </ul>
      </li>
    </template>
  </ul>
</section>
